{
  "name": "web-build-tools",
  "description": "Web build tools",
  "author": "Porky Ke",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/porky-prince/web-build-tools#readme",
  "repository": "git@github.com:porky-prince/web-build-tools",
  "bugs": "https://github.com/porky-prince/web-build-tools/issues",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "scripts": {
    "prepare": "husky",
    "commitlint": "commitlint --from=main",
    "lint:prettier": "prettier \"{**/*,*}.{js,ts,json}\" --cache -l",
    "lint:code": "eslint --cache .",
    "lint": "npm-run-all -l -p \"lint:**\"",
    "pretest": "npm run lint",
    "test": "pnpm --filter \"*\" test",
    "build": "pnpm --filter \"*\" build",
    "pub:changeset": "changeset",
    "pub:alpha": "changeset pre enter alpha",
    "pub:beta": "changeset pre enter beta",
    "pub:rc": "changeset pre enter rc",
    "pub:exit-pre": "changeset pre exit",
    "pub:version": "changeset version",
    "pub:release": "changeset publish"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.37.0",
    "del": "^8.0.1",
    "del-cli": "^7.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.45.0"
  }
}
